<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculator"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/calcInputDescription_LinearLayout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:padding="@dimen/abc_action_bar_overflow_padding_start_material">
        <TextView
            android:id="@+id/firstNumberDescription"
            android:text="@string/number1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:textSize="@dimen/abc_text_size_title_material" />
        <TextView
            android:id="@+id/secondNumberDescription"
            android:text="@string/number2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:textSize="@dimen/abc_text_size_title_material"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/numbers_LinearLayout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:paddingLeft="@dimen/abc_control_padding_material"
        android:paddingRight="@dimen/abc_control_padding_material">
        <EditText
            android:id="@+id/number1"
            android:inputType="numberDecimal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="@dimen/abc_control_padding_material"
            android:layout_weight="0.5" />
        <EditText
            android:id="@+id/number2"
            android:inputType="numberDecimal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="0.5" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttons_LinearLayout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:paddingLeft="@dimen/abc_button_padding_horizontal_material"
        android:paddingRight="@dimen/abc_button_padding_horizontal_material"
        android:paddingTop="@dimen/abc_dialog_padding_top_material">
        <Button
            android:id="@+id/add_Button"
            android:text="@string/ADD"
            android:layout_width="fill_parent"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/abc_dialog_corner_radius_material"
            android:layout_marginRight="@dimen/abc_dialog_corner_radius_material" />
        <Button
            android:id="@+id/subtract_Button"
            android:text="@string/SUB"
            android:layout_width="fill_parent"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/abc_dialog_corner_radius_material"
            android:layout_marginRight="@dimen/abc_dialog_corner_radius_material" />
        <Button
            android:id="@+id/divide_Button"
            android:text="@string/DIV"
            android:layout_width="fill_parent"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/abc_dialog_corner_radius_material"
            android:layout_marginRight="@dimen/abc_dialog_corner_radius_material" />
        <Button
            android:id="@+id/multiply_Button"
            android:text="@string/MLT"
            android:layout_width="fill_parent"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/abc_dialog_corner_radius_material"
            android:layout_marginRight="@dimen/abc_dialog_corner_radius_material" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/answer_LinearLayout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:padding="@dimen/abc_control_padding_material">
        <TextView
            android:id="@+id/calcResult"
            android:text="@string/initialResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/notification_small_icon_size_as_large"
            android:gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>