<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25dp"
    android:minHeight="25dp">
    <LinearLayout
        android:id="@+id/calculator"
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/calcInputDescription_LinearLayout"
            android:orientation="horizontal"
            android:minWidth="25dp"
            android:minHeight="25dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:padding="5dp">
            <TextView
                android:id="@+id/firstNumberDescription"
                android:text="@string/number1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/secondNumberDescription"
                android:text="@string/number2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/numbers_LinearLayout"
            android:orientation="horizontal"
            android:minWidth="25dp"
            android:minHeight="25dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <EditText
                android:id="@+id/number1"
                android:inputType="numberDecimal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="0.5" />
            <EditText
                android:id="@+id/number2"
                android:inputType="numberDecimal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="0.5" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:orientation="horizontal"
            android:minWidth="25dp"
            android:minHeight="25dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="25dp">
            <Button
                android:id="@+id/add_Button"
                android:text="@string/ADD"
                android:layout_width="fill_parent"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" />
            <Button
                android:id="@+id/subtract_Button"
                android:text="@string/SUB"
                android:layout_width="fill_parent"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" />
            <Button
                android:id="@+id/divide_Button"
                android:text="@string/DIV"
                android:layout_width="fill_parent"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" />
            <Button
                android:id="@+id/multiply_Button"
                android:text="@string/MLT"
                android:layout_width="fill_parent"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/answer_LinearLayout"
            android:orientation="horizontal"
            android:minWidth="25dp"
            android:minHeight="25dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:padding="5dp">
            <TextView
                android:id="@+id/calcResult"
                android:text="N/A"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>